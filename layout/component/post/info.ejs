<div class="post-meta">
  <div class="post-info">
    <span class="post-time iconfont icon-shizhong" title="<%- lctzDate(page.date, "LLLL (zZ)") %>">
      <%- __('post.updateAt', lctzDate(page.date, "LL")) %>
    </span>
    <% if (theme.wordcount){ %>
      <span class="icon infosep"></span>
      <span class="post-wordcount iconfont icon-yuedu">
        <%= __('post.wordCount', wordCount(page.raw)) %>
      </span>
    <% } %>
  </div>
  <div class="post-directory">
    <%
      let s=page.source.split('\/').slice(0,-1);
      s[0]="";
      let url="/directory";
    %>
    <a class="directory" href="<%=url_for(url)%>">Home</a>
    <% s.forEach((dir, i) => { %>
        <% url = url + dir + '\/'; %>
        <a class="directory" href="<%=url_for(url)%>">
          <%= theme.directory.wordmap[dir] ? theme.directory.wordmap[dir] : dir %>
        </a>
        <span class="icon smallarrow"></span>
    <% }) %>
    <%- __('post.current') %>
  </div>
  <% if (page.tags && page.tags.length){ %>
    <div class="post-list-tags">
      <% page.tags.forEach((tag, i) => { %>
        <a class="tag" href="<%=url_for(tag.path)%>">
          <%='#'+tag.name%>
        </a>
      <% }) %>
    </div>
  <% } %>
</div>