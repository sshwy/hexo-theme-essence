<div class="post-footer">
  <hr>
  <% if(page.next){ %>
    <div class="next-post">
      <span class="iconfont icon-arrow-left-circle"></span> 
      <a href="/<%=page.next.path%>">
        <%=page.next.title%>
      </a>
    </div>
  <% } %>
  <% if(page.prev){ %>
    <div class="prev-post">
      <a href="/<%=page.prev.path%>">
        <%=page.prev.title%>
      </a> 
      <span class="iconfont icon-arrow-right-circle"></span>
    </div>
  <% } %>
</div>