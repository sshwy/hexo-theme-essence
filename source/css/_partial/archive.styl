.archive
  margin: auto;
  max-width: 1100px;
  padding-top: 50px

  header
    padding: 0 10px

  span.tag 
    margin: 0 0.1em
  a.tag
    color: var(--text-secondary-color);
    &:hover
      color: var(--link-hover-color);

  .tags
    font-size:1.1em;
  .article-count
    font-size:1.5em;
    text-align:center;

@media only screen and (min-width: 900px) 
  .archive 
    .item-list
      margin-left: 45px;
      margin-right: 20px;

@media only screen and (max-width: 900px)
  .item-list
    margin: 0 20px;

@media only screen and (max-width: 600px) 
  .archive
    h2
      font-size: 2.8rem;