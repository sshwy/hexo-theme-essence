.index-title
  display table
  width 100%
  height calc(100vh - 130px)
  text-align center
  font-size: 2em;
  margin-bottom: 80px
  div.index-banner
    display table-cell 
    vertical-align middle
    padding 0 1em
    .homepage-meta
      margin-top: 5px;
      span
        font-size: 2.3rem;
      .homepagemetasep:before
        content: "|"
        padding: 0 1px;

.more-articles
  text-align center
  a
    font-size:1.5em
    color: var(--text-secondary-color);
    &:hover
      text-decoration: none
      color: black

.index-section-title
  text-align: center; 
  font-size: 2.2rem
  margin: .5em

.recently-updated.archive,
.recommend.archive
  margin: 1em

@media only screen and (max-width: 600px) 
  .index-title 
    font-size: 2.4rem;
  .index-section-title
    font-size: 2.23rem

@media only screen and (max-width: 400px) 
  .index-title 
    font-size: 2.08rem;
  .index-section-title
    font-size: 1.92rem

